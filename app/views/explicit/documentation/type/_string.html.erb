<% if type.empty == false %>
  <span class="record__constraint">
    not empty
  </span>
<% end %>

<% if type.minlength %>
  <span class="record__constraint">
    <%= "minlength #{type.minlength}" %>
  </span>
<% end %>

<% if type.maxlength %>
  <span class="record__constraint">
    <%= "maxlength #{type.maxlength}" %>
  </span>
<% end %>

<% if type.format %>
  <span class="record__constraint">
    <%= "format #{type.format.inspect}" %>
  </span>
<% end %>

<% if type.downcase %>
  <span class="record__constraint">
    <%= "case insensitive" %>
  </span>
<% end %>
