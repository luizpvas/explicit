<%= type_constraints do %>
  <% if type.empty == false %>
    <%= type_constraint "not", "empty" %>
  <% end %>

  <% if type.minlength %>
    <%= type_constraint "minlength", type.minlength %>
  <% end %>

  <% if type.maxlength %>
    <%= type_constraint "maxlength", type.maxlength %>
  <% end %>

  <% if type.format %>
    <%= type_constraint "format", type.format.inspect %>
  <% end %>

  <% if type.downcase %>
    <%= type_constraint "case", "insensitive" %>
  <% end %>
<% end %>
